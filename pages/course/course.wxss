/**course.wxss**/
.course_name{
height: 80rpx;
line-height: 80rpx;
width: 100%;
background: #f5f5f5;
text-align: center;
font-size:36rpx;
color:#444;
z-index:99;
}
.swiper-tab{  
width: 100%;  
border-bottom: 1rpx solid #eaeaea;  
text-align: center;  
line-height: 60rpx;
position:fixed;
z-index:99;
background:#fff;
}  
.swiper-tab-list{  
font-size: 30rpx;  
display: inline-block;  
width: 25%;  
color: #444;  
}  
.on{ 
color: #04be02;  
border-bottom: 4rpx solid #04be02;
}  
  
.swiper-box{ display: block; height: 100%; width: 100%;overflow-y:scroll;}  
.swiper-box view{  
text-align: center;  
}  
.swiper_list text{
font-size:30rpx;
color:#444;
width:87%;
display:inline-block;
text-align:left;
margin:20rpx 0;
}
.swiper_list image{
 height:320rpx; 
}