page {
    width: 100%;
    height: 100%;
}

.main-wrap {
    width: 750rpx;
    height: 100%;
}

.background {
    width: 750rpx;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background-size: 100% 100%;
    z-index: -1;
    background-color: #ED3060;
}

.top-wrap {
    position: relative;
    width: 750rpx;
    height: 880rpx;
}

.middle-wrap {
    position: relative;
    margin-top: 20rpx;
}

.bottom-wrap {
    position: relative;
    margin-bottom: 50rpx;
}

#topImg {
    width: 100%;
}

#guide {
    position: absolute;
    width: 196rpx;
    height: 96rpx;
    left: 532rpx;
    top: 20rpx;
}

#myVideo,
#video-play {
    position: absolute;
    left: 60rpx;
    top: 500rpx;
    width: 640rpx;
    height: 360rpx;
}

#playImg {
    position: absolute;
    left: 300rpx;
    top: 600rpx;
    width: 150rpx;
    height: 150rpx;
}

#btnImg {
    width: 100%;
    margin-top: 10rpx;
}

#giftImg {
    position: absolute;
    width: 200rpx;
    height: 200rpx;
    left: 90rpx;
    top: 108rpx;
    animation-timing-function: linear;
    animation-name: breathe;
    animation-duration: 2000ms;
    animation-iteration-count: infinite;
    /* animation-direction: alternate; */
}

@keyframes breathe {
    0% {
        transform: scale(0.9);
    }

    50% {
        transform: scale(1);
    }

    100% {
        transform: scale(0.9);
    }
}

#tipImg {
    width: 562rpx;
    height: 76rpx;
    margin-left: 94rpx;
}

.contact-btn {
    position: absolute;
    left: 50rpx;
    top: 106rpx;
    width: 650rpx;
    height: 200rpx;
    opacity: 0.0;
}

.contact-btn2 {
    position: absolute;
    left: 85rpx;
    top: 0rpx;
    width: 480rpx;
    height: 90rpx;
    opacity: 0.0;
}

.tabbar-title {
    width: 670rpx;
    z-index: 100;
    display: flex;
    justify-content: space-between;
    margin-left: 40rpx;
    margin-top: 40rpx;
}

.tabbar-item {
    box-sizing: border-box;
    width: 320rpx;
    height: 88rpx;
    line-height: 88rpx;
    font-size: 28rpx;
    letter-spacing: 0;
    font-weight: bold;
    background: rgba(205, 49, 77, 1);
    color: rgba(255, 255, 255, 0.8);
    border-radius: 8px 8px 0px 0px;
    text-align: center;
}

.on {
    background: rgba(255, 136, 99, 1);
}

.tabbar-one,
.tabbar-two {
    box-sizing: border-box;
    width: 670rpx;
    /* height: 500rpx; */
    margin-left: 40rpx;
    background: rgba(255, 136, 99, 1);
    border-radius: 0px 0px 16px 16px;
}

#manualImg {
    width: 600rpx;
    margin-left: 35rpx;
    margin-top: 74rpx;
}

#logoImg {
    width: 220rpx;
    height: 20rpx;
    margin-top: 50rpx;
    margin-left: 265rpx;
}

.mask-layer {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0.5;
    overflow: hidden;
    z-index: 999;
    background: #000;
}

.popup {
    box-sizing: border-box;
    position: relative;
    width: 100%;
    z-index: 999;
}

#close {
    position: absolute;
    width: 88rpx;
    height: 88rpx;
    color: #fff;
    top: 40px;
    left: 640rpx;
}

#popupImg {
    position: absolute;
    width: 750rpx;
    top: 80px;
}

#content-wrap {
    box-sizing: border-box;
    position: absolute;
    width: 650rpx;
    height: 800rpx;
    top: 100px;
    left: 50rpx;
    display: flex;
    flex-wrap: wrap;
    flex-direction: column;
    align-items: center;
    justify-content: space-around;
}

#popupTitle {
    width: 100%;
    height: 60rpx;
    font-size: 44rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: bold;
    color: rgba(255, 255, 255, 1);
    line-height: 60rpx;
    text-align: center;
}

#scroll-view {
    width: 100%;
    height: 550rpx;
    margin-left: 10rpx;
}

#btn-wrap {
    position: relative;
    width: 100%;
    height: 100rpx;
}

#popupBtnImg {
    position: absolute;
    width: 480rpx;
    top: -50rpx;
    left: 85rpx;
}

#popupBtnText {
    position: absolute;
    width: 200rpx;
    height: 50rpx;
    font-size: 36rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: bold;
    color: rgba(255, 255, 255, 1);
    line-height: 50rpx;
    text-align: center;
    left: 225rpx;
    top: 5px;
}

.pageFixed {
    position: fixed;
    top: 68px;
    left: 0;
    bottom: 0;
    right: 0;
}

.description {
    font-size: 36rpx;
    line-height: 50rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    color: rgba(255, 255, 255, 1);
}

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}