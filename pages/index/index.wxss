.body{
  background: #F6F6F8;
  padding-bottom: 64rpx;
}
.main-wrapper {
  margin-bottom:100rpx;
}
.search-box-wrapper{
  display: flex;
  align-items: center;
  width: 100%;
  height: 88rpx;
}
.search-box {
  display: flex;
  align-items: center;
  width: 670rpx;
  height: 64rpx;
  line-height: 64rpx;
  margin-left: 40rpx;
  border-radius: 32rpx;
  background: #F2F2F2;
}
.search-icon {
  margin-left: 54rpx;
  width: 30rpx;
  height: 30rpx;
}

.search-text {
  margin-left: 30rpx;
  font-size: 28rpx;
  color: #999999;
  letter-spacing: 0;
}



.slide-image{
  border-radius: 8rpx;
  width: 670rpx;
  height: 300rpx
}

.banner_list{
  width: 670rpx;
  height: 300rpx;
  display: inline-block;
  border-radius: 8rpx;
  margin:0 10rpx
}
.flex-wrp {display: flex;}
.label{
  box-sizing: border-box;
  text-align: center;
  margin: 40rpx auto !important;
  padding:0 40rpx;
  height: 360rpx;
}

.column-item{
  display: inline-block;
  width: 110rpx;
  height:100rpx;
  text-align: center;
  border-radius: 100%;
  font-size: 26rpx;
  color: #333;
  margin:10rpx 12rpx;  
}
.column-item image{
  width: 100rpx;
  height:100rpx
}

.movie-container{
  display: flex;
  flex-direction: column;
}
.navbar{
  display: flex;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 500;
  width: 100%;
  height: 50px;
  flex-direction: row;
  text-align: center;
  color: #A8A8A8;
  font-size: 15px;
  box-sizing: border-box;
  background-color: #FFF;
  border-bottom: 1rpx solid #DFDFDF;
}
.navbar-item{
  flex: 1;
  padding: 26rpx 0px;
}
.navbar-item-active{
  transition: all 0.3s;
  border-bottom: 10rpx solid #494949;
  color: #494949;
}

.movie-content-wrapper{
  padding-top: 50px;
  height: 400px;
  /* background-color: #FF0000; */
}

.category{
  padding:20rpx 40rpx;
}
.section{
width: 100%;
overflow: hidden;
white-space: nowrap;
margin-top:10px
}

.item_list{
width: 210rpx;
height: 374rpx;
margin-right: 23rpx;
display: inline-block;
border-radius: 8rpx
}
.item_book_img{
  width: 210rpx;
  height: 294rpx;
  border-radius: 8rpx
}
.category .title{
  font-size: 32rpx;
  height: 30rpx;
  line-height: 30rpx;
  border-left: #FFD71C 3px solid;
  padding-left: 8px;
  color: #000;
}
.category .more{
  float: right;
  font-size: 26rpx;
  color:#666
}
.category .item_book_text{
  font-size: 28rpx;
  text-align: left;
  color: #333;
  height: 80rpx;
  width: 210rpx;
  white-space:normal;
  overflow:auto;
  display: block;
}




