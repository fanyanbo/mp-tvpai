.body {
  background: #F6F6F8;
  padding-bottom: 64rpx;
}

.search-box-wrapper {
  display: flex;
  width: 750rpx;
  height: 88rpx;
  align-items: center;
  background: #FFFFFF;
  margin: 10rpx 0
}

.search-box {
  display: flex;
  align-items: center;
  width: 670rpx;
  height: 64rpx;
  line-height: 64rpx;
  margin-left: 40rpx;
  border-radius: 32rpx;
  background: #F2F2F2;
}

.search-icon {
  margin-left: 54rpx;
  width: 30rpx;
  height: 30rpx;
}

.search-text {
  margin-left: 30rpx;
  font-size: 28rpx;
  color: #999999;
  letter-spacing: 0;
}

.main-wrapper {
  padding-bottom: 178rpx;
}

.banner-wrapper {
  width: 100%;
  height: 300rpx;
  overflow: hidden;
}

.banner-item {
  width: 670rpx;
  height: 300rpx;
  display: inline-block;
  border-radius: 8rpx;
  margin: 0 10rpx;
}

.iqiyi-label {
  box-sizing: border-box;
  text-align: center;
  height: 358rpx;
  margin-top: 40rpx;
  margin-bottom: 20rpx;
}

.tencent-label {
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  margin: 30rpx 10rpx;
}

.column-item {
  display: inline-block;
  width: 104rpx;
  height: 140rpx;
  text-align: center;
  font-size: 26rpx;
  color: #333;
  margin: 0rpx 20rpx;
  margin-bottom: 20rpx
}

.column-item image {
  width: 104rpx;
  height: 104rpx;
  border-radius: 100%;
  display: flex;
}

.column-item .label-text {
  height: 36rpx;
  line-height: 36rpx;
}

.section {
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  margin-bottom: 60rpx
}

.item_list {
  width: 210rpx;
  height: 374rpx;
  margin-left: 20rpx;
  display: inline-block;
  border-radius: 8rpx;
  vertical-align: top;
}

.scroll-view_x .item_list:nth-child(1) {
  margin-left: 40rpx
}

.title {
  height: 88rpx;
  padding: 0rpx 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.title .line {
  width: 6rpx;
  height: 36rpx;
  background: #FFD71C;
}

.title .text {
  font-size: 36rpx;
  color: #000;
  font-weight: bold;
  margin-left: -420rpx;
}

.title .more {
  font-size: 26rpx;
  color: #999;
  display: flex;
  align-items: center;
}

.title .more .arrow {
  height: 24rpx;
  width: 24rpx;
}

.poster-img {
  width: 210rpx;
  height: 294rpx;
  border-radius: 12rpx
}

.poster-text {
  width: 210rpx;
  height: 80rpx;
  line-height: 34rpx;
  font-size: 28rpx;
  text-align: left;
  color: #333;
  display: -webkit-box !important;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  white-space: pre-wrap;
}

swiper {
  display: block;
  height: 300rpx;
  position: relative;
}

.slide-image {
  display: block;
  margin: 0 auto;
  border-radius: 16rpx;
  width: 670rpx;
  height: 300rpx
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.swiper-box .wx-swiper-dot {
  width: 20rpx;
  display: inline-flex;
  height: 6rpx;
  margin-left: -2rpx;
  /*圆点间距 */
  justify-content: space-between;

}

.swiper-box .wx-swiper-dot::before {
  content: '';
  flex-grow: 1;
  background: #ECECEC;
  border-radius: 8rpx
}

.swiper-box .wx-swiper-dot-active::before {
  background: #FFD71C;
}