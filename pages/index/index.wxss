.none{
  display: none;
}
.container{
  width: 100%;
  overflow-x: hidden;
}
.banner{
  overflow-x: hidden;
}
swiper{
  /* padding-bottom:150rpx; */
    height: 400rpx;  
  margin-bottom: 38rpx;
  overflow-x:hidden; 
}
.slide-image{
  width: 100%;
   height:360rpx; 
}
.wx-swiper-dots{
  margin-bottom: -14rpx;
  position: relative;
  z-index: 9000
}
swiper-item{
  z-index: 1000;
  overflow: hidden;
}
swiper-item image{
   /* height:480rpx  */
}
.banner-text{
  position:absolute;
  z-index:99999;
  bottom:40rpx;
  left:0;
  display:block;
  text-align:left;
  width:100%;
  font-size:32rpx;
  color:#fff;
  padding-left:20rpx;
  padding-bottom:20rpx;
  padding-top:20rpx;
  background:linear-gradient(to bottom, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.3) 100%);
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  box-sizing: border-box;
}
.stream{
  width: 100%;
}
.period{
  margin-bottom: 20rpx;
}
.period text{
  padding-left: 20rpx;
  font-size: 28rpx;
  color: #999;
  display: block;
}
.stream-item{
  width: 100%;
  font-size: 0;
  /* margin-top: 30rpx;
  padding-bottom: 30rpx; */
}
.stream-img{
  width: 100%;
  height: 360rpx; 
}
.stream-item-title{
  text-align: center;
  margin-top: 30rpx;
}
.stream-title{
  font-size: 32rpx;
  color: #444;
  display: block;

}
.stream-time{
  font-size: 22rpx;
  color: #a8a8a8;
  display: inline-block;
  margin: 20rpx 0 60rpx 0;
  width:47%;
  text-align:right;
  padding-right:5rpx;
}
.stream-time-left{
  text-align: left;
}
.veticle-line{
  margin: 0 20rpx;
}
.verticalLine{
  display: inline-block;
  font-size:28rpx;
  color:#a8a8a8;
  margin-left:10rpx;
  margin-right:10rpx;
}
.more-data{
  text-align:center;
  display:block;
  font-size:28rpx;
  margin:40rpx auto 20rpx auto;
  color:#999;
}
.stream-topic-item{
  margin-bottom: 60rpx;
  height: 254rpx;
  width: 100%;
  font-size: 0;
  position: relative;
  background-color: #f5f5f5;
  border: 1rpx solid #eaeaea
}
.topic-item-type{
  position: absolute;
  top: 0;
  left: 0;
  font-size: 22rpx;
  line-height: 30rpx;
  color: #fff;
  display: block;
  text-align: center;
  width: 80rpx;
  height: 30rpx;
  background: #fc6e5c;
}
.topic-item-title{
  display: block;
  text-align: center;
  font-size: 32rpx;
  color: #444;
  margin-bottom: 30rpx;
  margin-top: 85rpx;
}
.topic-item-time{
  display: block;
  text-align: center;
  font-size: 22rpx;
  color: #a8a8a8;
}
