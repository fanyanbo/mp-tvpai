.body {
  background: #F6F6F8;
  padding-bottom: 64rpx;
}

.search-box-wrapper {
  display: flex;
  width: 750rpx;
  height: 88rpx;
  align-items: center;
  background: #FFFFFF;
  margin: 10rpx 0
}

.search-box {
  display: flex;
  align-items: center;
  width: 670rpx;
  height: 64rpx;
  line-height: 64rpx;
  margin-left: 40rpx;
  border-radius: 32rpx;
  background: #F2F2F2;
}

.search-icon {
  margin-left: 54rpx;
  width: 30rpx;
  height: 30rpx;
}

.search-text {
  margin-left: 30rpx;
  font-size: 28rpx;
  color: #999999;
  letter-spacing: 0;
}

.main-wrapper {
  padding-bottom: 178rpx;
}

.banner-wrapper {
  width: 100%;
  height: 300rpx;
  overflow: hidden;
}

.banner-item {
  width: 670rpx;
  height: 300rpx;
  display: inline-block;
  border-radius: 8rpx;
  margin: 0 10rpx;
}

.iqiyi-label {
  box-sizing: border-box;
  text-align: center;
  height: 358rpx;
  margin-top: 40rpx;
  margin-bottom: 20rpx;
}

.tencent-label {
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  margin: 30rpx 10rpx;
}

.column-item {
  display: inline-block;
  width: 104rpx;
  height: 140rpx;
  text-align: center;
  font-size: 26rpx;
  color: #333;
  margin: 0rpx 20rpx;
  margin-bottom: 20rpx
}

.column-item image {
  width: 104rpx;
  height: 104rpx;
  border-radius: 100%;
  display: flex;
}

.column-item .label-text {
  height: 36rpx;
  line-height: 36rpx;
}

.section {
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  margin-bottom: 60rpx
}

.title {
  height: 88rpx;
  padding: 0rpx 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.title .line {
  width: 6rpx;
  height: 36rpx;
  background: #FFD71C;
}

.title .text {
  font-size: 36rpx;
  color: #000;
  font-weight: bold;
  margin-left: -420rpx;
}

.title .more {
  font-size: 26rpx;
  color: #999;
  display: flex;
  align-items: center;
}

.title .more .arrow {
  height: 24rpx;
  width: 24rpx;
}

.poster-item {
  position: relative;
  display: inline-block;
  width: 210rpx;
  height: 374rpx;
  margin-left: 20rpx;
  border-radius: 8rpx;
  vertical-align: top;
}

.scroll-view_x .poster-item:nth-child(1) {
  margin-left: 40rpx
}

.poster-img {
  width: 210rpx;
  height: 294rpx;
  border-radius: 12rpx
}

.poster-corner {
  position: absolute;
  left: 0;
  top: 0;
  width: 100rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #FFD71C;
  font-weight: bold;
  text-align: center;
  background: #eee;
}

.poster-text {
  width: 210rpx;
  height: 80rpx;
  line-height: 34rpx;
  font-size: 28rpx;
  text-align: left;
  color: #333;
  display: -webkit-box !important;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  white-space: pre-wrap;
}

swiper {
  display: block;
  height: 300rpx;
  position: relative;
}

.slide-image {
  display: block;
  margin: 0 auto;
  border-radius: 16rpx;
  width: 670rpx;
  height: 300rpx
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.swiper-box .wx-swiper-dot {
  width: 20rpx;
  display: inline-flex;
  height: 6rpx;
  margin-left: -2rpx;
  /*圆点间距 */
  justify-content: space-between;

}

.swiper-box .wx-swiper-dot::before {
  content: '';
  flex-grow: 1;
  background: #ECECEC;
  border-radius: 8rpx
}

.swiper-box .wx-swiper-dot-active::before {
  background: #FFD71C;
}

.topic-wrapper {
  font-size: 24rpx;
  text-align: center;
}
.topic-title {
  height: 88rpx;
  padding: 0rpx 40rpx;
  display: flex;
  align-items: center;
}
.topic-title .line {
  width: 6rpx;
  height: 36rpx;
  background: #FFD71C;
}
.topic-title .text {
  font-size: 36rpx;
  color: #000;
  font-weight: bold;
  margin-left: 16rpx;
}
.topic-content {
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  margin-bottom: 60rpx;
  background: #ECECEC;
}
.topic-item {
  display: inline-block;
  width: 500rpx;
  height: 730rpx;
  margin-left: 20rpx;
  border-radius: 8rpx;
  vertical-align: top;
}
.topic-item .maintitle {
  width: 500rpx;
  height: 70rpx;
  line-height: 70rpx;
  background: #0F0;
}
.topic-item .subtitle {
  width: 500rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: #0ff;
}
.topic-item .list {
  box-sizing: border-box;
  width: 500rpx;
  height: 600rpx;
  border: 1rpx solid #00f;
}
.list-item {
  box-sizing: border-box;
  width: 500rpx;
  height: 200rpx;
  padding: 20rpx 40rpx;
}
.list-item-content {
  box-sizing: border-box;
  width: 420rpx;
  height: 180rpx;
  display: flex;
  border-bottom: 1rpx solid #f00;
}
.list-item-img {
  width: 120rpx;
  height: 160rpx;
  border-radius: 8rpx;
  background: #ddd;
}
.list-item-right {
  width: 300rpx;
  height: 160rpx;
  background: antiquewhite;
}
.list-item-title {
  width: 300rpx;
  height: 50rpx;
  line-height: 50rpx;
  background: goldenrod;
}
.list-item-tag {
  width: 300rpx;
  height: 40rpx;
  line-height: 40rpx;
  background: darkblue;
}
.list-item-desc {
  width: 300rpx;
  height: 70rpx;
  line-height: 70rpx;
  background: aqua;
}

.scroll-view_x .topic-item:nth-child(1) {
  margin-left: 40rpx
}