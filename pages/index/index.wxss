
.body{
  background: #F6F6F8;
  padding-bottom: 64rpx;
}
.search-box-wrapper{
  display: flex;
  width: 750rpx;
  height: 88rpx;
  align-items: center; 
  background: #FFFFFF;
}
.search-box {
  display: flex;
  align-items: center;
  width: 670rpx;
  height: 64rpx;
  line-height: 64rpx;
  margin-left: 40rpx;
  border-radius: 32rpx;
  background: #F2F2F2;
}
.search-icon {
  margin-left: 54rpx;
  width: 30rpx;
  height: 30rpx;
}
.search-text {
  margin-left: 30rpx;
  font-size: 28rpx;
  color: #999999;
  letter-spacing: 0;
}
.main-wrapper {
  margin-bottom:100rpx;
}
.banner_list{
  width: 670rpx;
  height: 300rpx;
  display: inline-block;
  border-radius: 8rpx;
  margin:0 10rpx
}
.flex-wrp {display: flex;}
.label{
  box-sizing: border-box;
  text-align: center;
  margin: 40rpx auto !important;
  height: 360rpx;
}
.tx_label{
width: 100%;
overflow: hidden;
white-space: nowrap;
margin:30rpx 0
}
.tx_txt{
  display: block
}
.column-item{
  display: inline-block;
  width: 110rpx;
  height:100rpx;
  text-align: center;
  border-radius: 100%;
  font-size: 26rpx;
  color: #333;
  margin:10rpx 20rpx;  
}
.column-item image{
  width: 100rpx;
  height:100rpx
}
.movie-container{
  display: flex;
  flex-direction: column;
}
.navbar{
  display: flex;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 500;
  width: 100%;
  height: 50px;
  flex-direction: row;
  text-align: center;
  color: #A8A8A8;
  font-size: 15px;
  box-sizing: border-box;
  background-color: #FFF;
  border-bottom: 1rpx solid #DFDFDF;
}
.navbar-item{
  flex: 1;
  padding: 26rpx 0px;
}
.navbar-item-active{
  transition: all 0.3s;
  border-bottom: 10rpx solid #494949;
  color: #494949;
}
.movie-content-wrapper{
  padding-top: 50px;
  height: 400px;
}
.category{
  padding:20rpx 40rpx;
}
.section{
width: 100%;
overflow: hidden;
white-space: nowrap;
margin-top:10px
}
.item_list{
width: 210rpx;
height: 374rpx;
margin-right: 23rpx;
display: inline-block;
border-radius: 8rpx
}
.item_book_img{
  width: 210rpx;
  height: 294rpx;
  border-radius: 8rpx
}
.category .title{
  font-size: 32rpx;
  height: 30rpx;
  line-height: 30rpx;
  border-left: #FFD71C 3px solid;
  padding-left: 8px;
  color: #000;
}
.category .more{
  color:#999;
  float: right;
  font-size: 26rpx;
  height: 40rpx;
  line-height: 40rpx;
  display: block;
}
.category .item_book_text{
  font-size: 28rpx;
  text-align: left;
  color: #333;
  height: 40rpx;
  width: 210rpx;
  display: block;
  overflow:hidden;
  white-space:nowrap;
  text-overflow:ellipsis
}
.banner-swiper {
 width: 100%;
 height: 300rpx;
 overflow: hidden;
}
swiper {
 display: block;
 height: 300rpx;
 position: relative;
}
.slide-image {
 display: block;
 margin: 0 auto;
border-radius: 8rpx;
width: 670rpx;
height: 300rpx
}
.active{
 margin-top:0rpx;
 height: 300rpx;
}


.arrow{
  height: 24rpx;
  width: 24rpx;
  vertical-align: middle;
  display: inline-block;
  padding-bottom: 3rpx
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

