<swiper indicator-dots="{{indicatorDots}}"
  autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
  <block wx:for="{{imgUrls}}">
    <swiper-item>
      <image src="{{item}}" class="slide-image" width="355" height="150"/>
    </swiper-item>
  </block>
</swiper>

<view class="section">
  <view class="column-view">
  <navigator class="column-item" url="../column/column?id={{item.columnId}}" wx:for="{{column}}">
    <view>{{item.text}}</view>
  </navigator>
  <navigator class="column-item" url="../columnDetail/columnDetail">
    <view>更多</view>
  </navigator>
  </view>
</view>

