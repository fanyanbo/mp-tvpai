<!-- 导航栏组件 -->
<view>
  <navBar background='#fff' searchBar="{{true}}" bindsearch='searchAAA' />
</view>

<view class="main-wrapper">
  <!-- 搜索框，非固定位置 -->
  <!-- <view class="search-box-wrapper">
    <view class="search-box" bindtap='handleSearchTap'>
      <image src="../../images/ser_icon.png" class="search-icon"></image>
      <text class="search-text">{{searchContent}}</text>
    </view>
  </view> -->
  <scroll-view scroll-y="true" style="height: auto" bindscrolltoupper="upper" bindscrolltolower="lower">
    <!-- banner区域，运营重点区域 -->
    <view class="banner-wrapper">
      <swiper autoplay="{{autoplay}}" current='{{swiperCurrent}}' previous-margin="{{previousmargin}}" next-margin="{{nextmargin}}" bindchange="swiperChange">
        <block wx:for="{{streams}}" wx:key="key" class="banner-item">
          <swiper-item data-type="cinecism" data-id="{{item.articleId}}" bindtap="jumpFind">
            <image src="{{item.articlePicUrl}}" class="slide-image" bindchange="chuangEvent"></image>
          </swiper-item>
        </block>
        <block wx:key="key" class="banner-item">
          <swiper-item data-type="find" bindtap="jumpFind">
            <image src="../../images/banner.jpg" class="slide-image"></image>
          </swiper-item>
        </block>
      </swiper>
    </view>

    <!-- 区分腾讯源和爱奇艺源标签分类，因为标签个数不同，它们的布局不同 -->
    <swiper wx:if="{{type == 'iqiyi'}}" class="iqiyi-label swiper-box" indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" indicator-active-color="{{indicatorActiveColor}}" indicator-color="{{indicatorColor}}">
      <block>
        <swiper-item>
          <view wx:for="{{column1}}" wx:key="index" class="column-item" data-category="{{item.classify_id}}" data-title="{{item.classify_name}}" bindtap="handleCategoryTap">
            <image src="{{item.classify_pic}}" mode="aspectFill"></image>
            <view class="label-text">{{item.classify_name}}</view>
          </view>
        </swiper-item>
      </block>
      <block>
        <swiper-item>
          <view wx:for="{{column2}}" wx:key="index" class="column-item" data-category="{{item.classify_id}}" data-title="{{item.classify_name}}" bindtap="handleCategoryTap">
            <image src="{{item.classify_pic}}" mode="aspectFill"></image>
            <view class="label-text">{{item.classify_name}}</view>
          </view>
        </swiper-item>
      </block>
      <block>
        <swiper-item>
          <view wx:for="{{column3}}" wx:key="index" class="column-item" data-category="{{item.classify_id}}" data-title="{{item.classify_name}}" bindtap="handleCategoryTap">
            <image src="{{item.classify_pic}}" mode="aspectFill"></image>
            <view class="label-text">{{item.classify_name}}</view>
          </view>
        </swiper-item>
      </block>
    </swiper>
    <view wx:if="{{type == 'qq'}}" class="tencent-label">
      <scroll-view class="scroll-view_x" scroll-x style="width: auto; overflow:hidden;">
        <view wx:for="{{column}}" wx:key="index" class="column-item" data-category="{{item.classify_id}}" data-title="{{item.classify_name}}" bindtap="handleCategoryTap">
          <image src="{{item.classify_pic}}" mode="aspectFill"></image>
          <text class="label-txt">{{item.classify_name}}</text>
        </view>
      </scroll-view>
    </view>

    <!-- demo：片单列表 -->
    <view class="topic-wrapper">
      <view class="topic-title">
        <text class="line"></text>
        <text class="text">精彩片单</text>
      </view>
      <view class="topic-content">
        <scroll-view class="scroll-view_x" scroll-x style="width: auto; overflow:hidden;">
          <view class="topic-item" wx:for="{{topicList}}" wx:key="index" data-title="{{item.title}}" bindtap="handleTopicTap">
            <!-- <navigator url="../webview/webview?title={{item.title}}"> -->
              <view class="maintitle">片单主标题</view>
              <view class="subtitle">xxx个节目</view>
              <view class="list">
                <view class="list-item" wx:for="{{item.movieList}}"  wx:key="index">
                  <view class="list-item-content">
                    <image class="list-item-img" mode="aspectFill" src="http://pic3.iqiyipic.com/image/20190911/da/a1/v_114411383_m_601_m9_260_360.jpg"></image>
                    <view class="list-item-right">
                      <view class="list-item-title">影片名称</view>
                      <view class="list-item-tag">2019-地区-风格</view>
                      <view class="list-item-desc">"一句话描述影片"</view>
                    </view>
                  </view>
                </view>
              </view>
            <!-- </navigator> -->
          </view>
        </scroll-view>
      </view>
    </view>

    <!-- 推荐分类及影片 -->
    <view class="category" wx:for="{{recommandList}}" wx:key="index">
      <view class="title">
        <text class="line"></text>
        <text class="text">{{item.title}}</text>
        <navigator class="more" url="../column/column?id={{item.tag_id}}&title={{item.title}}">
          <span style="font-weight: normal;">更多</span>
          <image class="arrow" src="../../images/index_arraw.png" mode="aspectFill"></image>
        </navigator>
      </view>
      <view class="section">
        <scroll-view class="scroll-view_x" scroll-x style="width: auto; overflow:hidden;">
          <view wx:for="{{item.video_list}}" wx:if="{{item.album_title != ''}}" wx:key="index" class="poster-item">
            <navigator url="../movieDetail/movieDetail?id={{item.third_album_id}}">
              <image src="{{item.video_poster}}" mode="aspectFill" class="poster-img"></image>
              <view class="poster-corner">{{item.video_detail.base_info.score}}</view>
              <view class="poster-text">{{item.album_title}}</view>
            </navigator>
          </view>
        </scroll-view>
      </view>
    </view>
  </scroll-view>
</view>

<!-- 遥控器组件 -->
<view>
  <remotecontrol id="remotecontrol-id" isShowTips="{{isShowTips}}" bIphoneFullScreenModel="{{bIphoneFullScreenModel}}"></remotecontrol>
</view>