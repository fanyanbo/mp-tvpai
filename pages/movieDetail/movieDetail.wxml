<!--pages/movieDetail.wxml-->
<view class='cntainer'>
<!--影片信息  -->
<view class="top">
<view class='movieDetail'>
  <image src='{{movieData.video_poster}}' class='haibao'></image>
  <view class='describe'>
    <ul>
      <li class="intwoline title">{{movieData.album_title}}</li>
      <li><span class="score">{{movieData.score}}分</span>{{movieData.video_tags}}</li>
      <li style="margin-top:50rpx">
        <span><image class="like" src='../../images/like_before1.png'></image></span>
        <span wx:if="{{movieData.video_type == '电影'}}"><image class="collect" src='../../images/collect_before.png'></image></span>
      </li>
    </ul>
  </view>
</view>
</view>
<!--影片信息end  -->

<view class="push" wx:if="{{movieType !='电影'}}"><image class="pushIcon" src='../../images/push.png'></image>投屏<span class="length">{{prompt_info}} ></span></view>

<view class='tvLists' wx:if="{{movieType !='电影'}}">
  <view class='scroll'>
    <view wx:for="{{moviesItem}}" wx:for-item="item" >
      <view bindtap='push' data-source="{{item.play_sources[0].source}}" data-index="{{item.segment_index}}" class='xs {{chioced==item.segment_index? "active":""}}' wx:if="{{movieType == '电影'}}">{{item.video_subtitle}}
      </view>
      <view bindtap='push' data-source="{{item.play_sources[0].source}}" data-index="{{item.segment_index}}" class='xs zy {{chioced==item.segment_index? "active":""}}' wx:if="{{movieType == '综艺'}}">
        <text class="segmeng moviesItem">第{{item.segment_index}}期</text>
        <text class="subtitle moviesItem">{{item.video_subtitle}}</text>
      </view>
      <view bindtap='push' data-source="{{item.play_sources[0].source}}" data-index="{{item.segment_index}}" class='xs {{chioced==item.segment_index? "active":""}}' wx:else>
      <text class="segmeng moviesItem">第{{item.segment_index}}集</text>
      </view>
      
    </view>
  </view>

</view>


<!--简介  -->
<view class="introduce" bindtap='chooseSezi'>简介<image class="arrow" src="../../images/arrow.png"></image></view> 
<view class='content'>
  <view><text class="label">导演：</text>{{movieData.director}}</view>
  <view><text class="label">演员：</text>{{movieData.actor}}</view>
</view>


<!--猜你喜欢  -->
<view class="introduce">猜你喜欢</view> 
<view class='movieList'>
  <view class='item' wx:for="{{videoLike}}" wx:for-item="item">
    <navigator url="../movieDetail/movieDetail?id={{item.third_album_id}}">
      <image src='{{item.video_poster}}'></image>
      <text class='describe'>{{item.album_title}}</text>
    </navigator>
  </view>
</view>  



<!--设备模板  -->
<view class='boxshdaw' hidden="{{flag ? true : false}}" bindtap='boxshdawclick'></view>
<view class="service" hidden="{{flag ? true : false}}">


  <view wx:if="{{iqiyi.length>0}}">
    <view class='item'>爱奇艺视频源</view>
     <view class='item' wx:for="{{iqiyi}}" wx:for-item="item">
     <view class='left'></view>
 <form bindsubmit="pushdown">
      <view class='right'>
        <text wx:if="{{item.model==null}}">{{item.deviceName}}</text>
        <text wx:else>{{item.model}} {{item.deviceName}}</text>
        <text class="right" data-serviceid="{{item.id}}" bindtap='pushdown'>推送</text>
      </view>
  </form>
     </view>
  </view>


<view wx:if="{{tent.length>0}}">
<view class='item'>腾讯视频源</view>
  <view class='item' wx:for="{{tent}}" wx:for-item="item">
      <view class='left'></view>
      <view class='right'>
        <text wx:if="{{item.model==null}}">{{item.deviceName}}</text>
        <text wx:else>{{item.model}} {{item.deviceName}}</text>
        <text class="right" data-serviceid="{{item.id}}" bindtap='pushdown'>推送</text>
      </view>
  </view>
</view>

<view class='no' wx:if="{{iqiyi.length<1&&tent.length<1}}">
  暂无相关设备
</view>
  
  
</view>

</view>


<view>
  <remotecontrol id="remotecontrol-id" isShowTips="{{isShowTips}}"></remotecontrol>
</view>

<!--详情弹窗 -->
<view class='maskLayer' bindtap='hideModal'></view>
<view class='choose' animation='{{animationData}}'>
  <view class="title">简介</view>
  <view class="description">{{movieData.description}}</view>
</view>