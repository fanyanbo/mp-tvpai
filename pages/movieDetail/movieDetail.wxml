<!--pages/movieDetail.wxml-->
<view class='cntainer {{proInfoWindow?"indexFixed":""}}' >
<!--影片信息  -->
<view class="top">
<view class='movieDetail'>
  <image src='{{movieData.video_poster}}' class='haibao'></image>
  <view class='describe'>
    <ul>
      <li class="intwoline title">{{movieData.album_title}}</li>
      <li><span class="score">{{movieData.score}}分</span>{{movieData.video_tags}}</li>
      <li style="margin-top:50rpx">
        <!-- <button class="like" open-type="getUserInfo" bindtap='like' data-title="{{movieData.album_title}}" data-poster="{{movieData.video_poster}}" data-id="{{movieData.third_album_id}}"><image src='../../images/like_before1.png'></image></button> -->
        <button class='collect' open-type="getUserInfo" bindgetuserinfo="bindGetUserInfo" data-moviechildid="{{item.segment_index}}" data-movieid="{{movieData.third_album_id}}"  data-tvid="{{video_url.vid}}" data-index="{{coocaa_m_id}}" wx:if="{{movieData.video_type == '电影'}}">
          <image wx:if="{{moviepush == false}}" src='../../images/collect_before.png'></image>
          <image wx:else="{{moviepush == true}}" src='../../images/collect_after.png'></image>
        </button>
      </li>
    </ul>
  </view>
</view>
</view>
<!--影片信息end  -->
<view data-tap='push' bindtap='chooseSezi' class="push" wx:if="{{movieType !='电影'}}"><image class="pushIcon" src='../../images/push.png'></image>投屏<span class="length">{{prompt_info}} ></span></view>
<view class='tvLists'>
  <view class='scroll' wx:if="{{movieType !='电影'}}">
    <view wx:for="{{moviesItem}}" wx:for-item="item" >
    <view wx:if="{{movieType == '综艺'}}" class='xs zy {{chioced==item.coocaa_m_id? "active":""}}'>
      <button class="segmeng" open-type="getUserInfo" bindgetuserinfo="bindGetUserInfo" data-moviechildid="{{item.segment_index}}" data-movieid="{{item.third_album_id}}" data-index="{{item.coocaa_m_id}}" data-tvid="{{video_url.vid}}" >第{{item.segment_index}}期</button>        
      <text class="subtitle moviesItem intwoline">{{item.video_title}}</text>
    </view>
      <button open-type="getUserInfo" bindgetuserinfo="bindGetUserInfo" data-moviechildid="{{item.segment_index}}" data-movieid="{{item.third_album_id}}" data-index="{{item.coocaa_m_id}}" data-tvid="{{video_url.vid}}" class='xs dsj {{chioced==item.coocaa_m_id? "active":""}}' wx:else>
      <text class="segmeng moviesItem">{{item.segment_index}}</text>
      </button>   
    </view>
  </view>
</view>
<!--简介  -->
<view class="introduce" data-tap='description' bindtap='chooseSezi'>简介<image class="arrow" src="../../images/arrow.png"></image></view> 
<view class='content'>
  <view><text class="label">导演：</text>{{movieData.director}}</view>
  <view><text class="label">演员：</text>{{movieData.actor}}</view>
</view>
<!--猜你喜欢  -->
<view class="introduce" wx:if="{{isShowtitle}}">猜你喜欢</view> 
<view class='movieList'>
  <view class='item' wx:for="{{videoLike}}" wx:key="index" wx:for-item="item">
    <navigator url="../movieDetail/movieDetail?id={{item.third_album_id}}">
      <image src='{{item.video_poster}}'></image>
      <text class='describe'>{{item.album_title}}</text>
    </navigator>
  </view>
</view>  
<!--设备模板  -->
<view class='boxshdaw' hidden="{{flag ? true : false}}" bindtap='boxshdawclick'></view>
<view class="service" hidden="{{flag ? true : false}}">
</view>
</view>
<view>
  <remotecontrol id="remotecontrol-id" isShowTips="{{isShowTips}}"></remotecontrol>
</view>
<!--详情弹窗 -->
<view wx:if="{{chooseSize}}" class='maskLayer' data-tap='description' bindtap='hideModal'></view>
<view wx:if="{{chooseSize}}" class='choose' animation='{{animationData}}'>
  <view class="title">简介</view>
<scroll-view
    scroll-y
    style="height: 800rpx;"
    bindscrolltoupper="upper"
    bindscrolltolower="lower"
    bindscroll="scroll"
    scroll-into-view="{{toView}}"
    scroll-top="{{scrollTop}}">
  <view class="description">{{movieData.description}}</view>
   </scroll-view>
</view>
<!--剧集弹窗-->
<view wx:if="{{pushSize}}" class='maskLayer' data-tap='push' bindtap='hideModal'></view>
<view wx:if="{{pushSize}}" class='choose' animation='{{animationData}}'>
  <view class="title">投屏</view>
  <scroll-view
    scroll-y
    style="height: 800rpx;"
    bindscrolltoupper="upper"
    bindscrolltolower="lower"
    bindscroll="scroll"
    scroll-into-view="{{toView}}"
    scroll-top="{{scrollTop}}">
  <view class="tvlist" wx:for="{{moviesItem}}" wx:for-item="item">
    <view wx:if="{{movieType == '综艺'}}" class='xs zy {{chioced==item.coocaa_m_id? "active":""}}'>
      <button class="segmeng" open-type="getUserInfo" bindgetuserinfo="bindGetUserInfo" data-movieid="{{item.third_album_id}}" data-moviechildid="{{item.segment_index}}" data-index="{{item.coocaa_m_id}}" data-tvid="{{video_url.vid}}" >第{{item.segment_index}}期</button>        
      <text class="subtitle moviesItem intwoline">{{item.video_title}}</text>
    </view>

      <button open-type="getUserInfo" bindgetuserinfo="bindGetUserInfo" data-movieid="{{item.third_album_id}}" data-moviechildid="{{item.segment_index}}" data-index="{{item.coocaa_m_id}}" data-tvid="{{video_url.vid}}" class='xs dsj {{chioced==item.coocaa_m_id? "active":""}}' wx:else>
      <text class="segmeng moviesItem">{{item.segment_index}}</text>
      </button>  
  </view>
  </scroll-view>
</view>