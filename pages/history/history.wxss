/* pages/history/history.wxss */
.contant{
  padding:0 40rpx;
  padding-bottom: 274rpx
}
.title{
  font-size: 32rpx;
  color: #000000;
  height: 90rpx;
  line-height: 90rpx
}
.list{
  display: flex;
  margin-bottom: 20rpx
}
.img{
  flex: 1;
}
.item_book_img{
  width: 256rpx;
  height: 144rpx;
  border-radius: 8rpx
}

.item_book_text{
  font-size: 32rpx;
  color: #666666;
  padding-top: 40rpx;
  padding-left: 20rpx;
  height: 80rpx;
  line-height: 40rpx;
  flex: 4
}
.intwoline{
    display:-webkit-box !important;
    overflow:hidden;
    text-overflow:ellipsis;
    word-break:break-all;
    -webkit-box-orient:vertical;
    -webkit-line-clamp:2;
}
.check{
  flex: 1;
  text-align: right;
  padding-top: 60rpx
}
.check image{
  width: 48rpx;
  height: 48rpx
}


















.header1{
  background-color: #f5f5f5;
}

.header {
  width: 100%;
  height: 80rpx;
  border-bottom: 1rpx solid #d6d6d6;
}
.header .header_con {
  width: 700rpx;
  height: 80rpx;
  margin: 0 auto;
  color: #333;
  font-size: 30rpx;
}
.header .header_con image{
  width: 44rpx;
  height: 44rpx;
}
.header .header_con .right{
  color: #ff4965;
}
.bottom{
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  border-top: 1rpx solid #ECECEC;
  background-color: #fff;
  position: fixed;
  left: 0rpx;
  bottom: 110rpx;
}
.iphone-fullscreen-model{
  bottom: 178rpx !important
}
.bottom .left{
  margin-left: 25rpx;
}
.bottom .left .select_none{
  width: 60rpx;
  height: 60rpx;
  border: 1rpx solid #d6d6d6;
  border-radius: 50%;
}
.bottom .right .all{
  color: #ff830f;
  font-size: 26rpx;
}
.bottom .right .gray{
  color: #666666;
  font-size: 22rpx;
}
.bottom .right .sure{
  text-align: center;
  color: #FF6246;

}
.bottom .edit{
  font-size: 32rpx;
  color: #333333;
  line-height: 96rpx
}
.icon_none{
  width: 60rpx;
  height: 60rpx;
  border: 1rpx solid #d6d6d6;
  border-radius: 50%;
}

.flex_center{
  display: flex;
  display: -webkit-flex;
  justify-content: center;
  align-items: center;
}
.flex_center .button{
  flex: 1;
  text-align: center;
  font-size: 32rpx
}
.flex_between{
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  align-items: center;
}
.flex_start{
  display: flex;
  display: -webkit-flex;
  justify-content: flex-start;
  align-items: center;
}
.flex_end{
  display: flex;
  display: -webkit-flex;
  justify-content: flex-end;
  align-items: center;
}
