.list {
  padding-bottom: 178rpx;
  width: 750rpx;
}

.nomv {
  margin: 30% auto;
  text-align: center
}

.item {
  position: relative;
  display: inline-block;
  vertical-align: top;
  width: 210rpx;
  height: 386rpx;
  margin-top: 30rpx;
  margin-left: 20rpx;
}

.poster-img {
  position: absolute;
  width: 210rpx;
  height: 294rpx;
  border-radius: 12rpx
}

.score {
  position: absolute;
  left: 162rpx;
  top: 248rpx;
  font-size: 24rpx;
  font-family:PingFangSC-Regular,PingFangSC;
  color: #ffffff;
  text-shadow:0px 1px 4px rgba(0,0,0,0.5);
}

.title {
  position: absolute;
  left: 0;
  top: 304rpx;
  width: 210rpx;
  height: 80rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  display: -webkit-box !important;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.list .item:nth-child(3n-2) {
  margin-left: 40rpx
}

button::after {
  border: none;
  background: none
}

.nomv {
  width: 100%;
  text-align: center;
  color: #666;
  font-size: 38rpx;
  padding-top: 200rpx
}

.nomv image {
  width: 400rpx;
  height: 274rpx;
}
