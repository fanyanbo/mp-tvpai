.column-view{
  text-align: center;
  width: 100%
}
.column-item{
  border:solid 1px #ccc;
  display: inline-block;
  width: 60px;
  height:60px;
  line-height: 60px;
  text-align: center;
  border-radius: 100%;
  font-size: 32rpx;
  margin: 20rpx
}
.movie-container{
  display: flex;
  flex-direction: column;
}
.navbar{
  display: flex;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 500;
  width: 100%;
  height: 50px;
  flex-direction: row;
  text-align: center;
  color: #A8A8A8;
  font-size: 15px;
  box-sizing: border-box;
  background-color: #FFF;
  border-bottom: 1rpx solid #DFDFDF;
}
.navbar-item{
  flex: 1;
  padding: 26rpx 0px;
}
.navbar-item-active{
  transition: all 0.3s;
  border-bottom: 10rpx solid #494949;
  color: #494949;
}

.movie-content-wrapper{
  padding-top: 50px;
  height: 400px;
