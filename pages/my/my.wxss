/* 清除button默认样式 */
button::after {
  border:none;
}
.mylabel {
  position: relative;
  width: 750rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  box-sizing: border-box;
  background: #fff
}
.mylabel .title {
  position: absolute;
  left: 100rpx;
  font-size: 32rpx;
  color: #000000;
  letter-spacing: 0;
}
.mylabel .more {
  position: absolute;
  font-size:28rpx;
  color:#999;
  right: 50rpx;
}
.mylabel .arrow {
  position: absolute;
  height: 26rpx;
  width: 14rpx;
  right: 20rpx;
}
.mylabel .my_icon {
  width: 42rpx;
  height: 42rpx;
}
.binding{
  margin-bottom: 40rpx
}
.userinfo {
  position: relative;
  width: 750rpx;
  height: 266rpx;
}
.userinfo .avatar-wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
  width: 750rpx;
  position: relative;
}
.avatar-wrapper .avatar {
  position: absolute;
  width: 132rpx;
  height: 132rpx;
  border-radius: 50%;
  margin-top: -10rpx;
  border: 30rpx solid white;
}
.avatar-wrapper .name {
  position: absolute;
  margin-top: 80rpx;
  font-size: 30rpx;
  height: 44rpx;
  line-height: 44rpx;
  color: #333;
  font-weight: 400
}
.section{
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  box-sizing: border-box;
  height: 208rpx;
}
.item_list{
  width: 210rpx;
  height: 168rpx;
  margin-left:20rpx;
  display: inline-block;
}
.scroll_box .item_list:nth-child(1){
  margin-left: 40rpx
}
.item_book_img{
  width: 210rpx;
  height: 118rpx;
  border-radius: 12rpx;
  margin: 20rpx 0 10rpx 0
}
.item_book_text{
  font-size: 28rpx;
  text-align: left;
  color: #333;
  height: 40rpx;
  line-height: 40rpx;
  width: 210rpx;
}
.inaline{
  overflow:hidden;
  white-space:nowrap;
  text-overflow:ellipsis
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

