  margin: 20rpx auto;
  width: 100%;
  background: #fff;
  height: 160rpx;
  /* overflow: hidden; */
  font-size: 0;
  padding-top: 10rpx;
}
.topic-type{
  font-size: 26rpx;
  display: block;
