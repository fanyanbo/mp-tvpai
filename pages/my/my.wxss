/* pages/my/my.wxss */

page {
  background-color: #fff;
}
.container{
  font-size: 0
}
.none{
  display: none
}
.mylabel{
  height: 88rpx;
  line-height: 88rpx;
  padding: 0 30rpx;
  width: 100%;
  box-sizing: border-box;
  background: none;
  text-align: left

}
.mylabel .title{
  color: #333;
  font-size: 30rpx;
  display: inline-block; 
  margin-left: 10rpx
}
.mylabel .more{
  float: right;
  font-size:28rpx;
  color:#999;
}
.mylabel .arrow{
  height: 26rpx;
  width: 14rpx;
  vertical-align: middle;
  display: inline-block;
  float: right;
  margin-top: 31rpx;
  margin-left: 10rpx
}
.my_icon{
  width: 42rpx;
  height: 42rpx;
  display: inline-block; 
  vertical-align: middle;
  float:left;
  margin-top: 26rpx
}
.userinfo {
  width: 100%;
  height: 266rpx;
  display: block;
  text-align: center;
  background-color: #fff;
  position: relative;
  overflow: hidden
}
.user-bg{
  width: 100%;
  height: 100%;
  background-size: 100% 100%;
  background-repeat: no-repeat;
  background: rgba(0, 0, 0, 0.15);
  filter: blur(45px); 
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1
}
.info-bg{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 2;
}
.user-msg{
  position: relative;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 3
}

.userinfo-avatar {
  width: 132rpx;
  height: 132rpx;
  border-radius: 50%;
  border: 2px solid white;
  margin-top: 40rpx
}

.userinfo-nickname {
  display: block;
  font-size: 30rpx;
  color: #333;
  margin: 10rpx 0 10rpx 0;
}
.coocaa-name,.onLine{
  /* display: inline-block; */
  font-size: 22rpx;
  color: #fff;
  /* background:none !important;
  border: none; */
}
.feedback{
  position: absolute;
  right: 30rpx;
  top: 30rpx;
  /* width: 40rpx; */
  height: auto;
  z-index: 3
  /* text-align: center */
}
.feedback>image{
  width: 40rpx;
  height: 40rpx;
  display: block;
  margin-left:9px;
}
.feedback>text{
  color: #fff;
  font-size: 20rpx
}

/*tab css*/
.swiper-tab{ 
  width: 100%; 
  height: 100rpx;
  background: #fff;
  border-bottom: 1rpx solid #eaeaea;  
  text-align: center; 
  /* line-height: 100rpx; */
  overflow: hidden;
  box-sizing: border-box
} 
.swiper-tab-list{ 
  font-size: 28rpx; 
  display: inline-block; 
  width: 33%; 
  color: #444; 
  text-align: center;
  height:90rpx;
} 
.ontext{
  display: block;
  text-align: center;
  width: 80%;
  margin: 0 auto;
  padding: 30rpx 0;
}
.on{ 
  color: #fc4c00; 
  border-bottom: 6rpx solid #fc4c00;
} 
.swiper-box{ 
  display: block; 
  width: 100%;
  overflow-y: scroll;
  /* height: 300px; */
} 
.swiper-box view{ 
  text-align: center; 
} 
.no-article{
  color: #c8c8c8;
  font-size: 28rpx;
  margin-top: 30%;
}

.article-item{
  position: relative;
  margin: 20rpx 0;
}
.article-bg{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 1
}
.article_img{
  width: 100%;
  height: 180rpx;
  position: relative
}
.article-text{
  position: absolute;
  top: 75rpx;
  left: 0;
  width: 100%;
  z-index: 1000;
  color: #fff;
  font-size: 32rpx; 
}
.article-text text{
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden
}
.no-coocaa{
  color: #c8c8c8;
  margin-top: 20%;
}
.no-title{
  font-size: 28rpx;
  display: block
}
.no-subtitle{
  font-size: 22rpx;
  margin: 20rpx 0 60rpx 0;
  display: block
}
.no-bind{
  width: 300rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: #444;
  background: #fff;
  border-radius: 5rpx !important;
  font-size: 26rpx;

}
.no-topic{
  left: 0;
  margin-top: 30%;
  font-size: 28rpx;
  color: #c8c8c8;
}
.no-movie{
  left: 0;
  margin-top: 30%;
  font-size: 28rpx;
  color: #c8c8c8;
}
.movie view{
  text-align: left
}
scroll-view{
