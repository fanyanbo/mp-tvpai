<view class="main-wrapper">
  <!-- 用户信息区 -->
  <view class="userinfo" bindtap="tapUserInfo">
    <block wx:if="{{bLoginCoocaa}}">
      <view class="avatar"><image class="avatar-image" src="{{ccUserInfo.avatar}}"></image></view>
      <view class="name"><text>{{ccUserInfo.name}}</text></view>
    </block>
    <view wx:else class="unlogin"><text>立即授权登录</text></view>
  </view>
  <!-- 产品源列表区 -->
  <view class="productlist">
    <scroll-view scroll-x>
      <view class="vipitem" wx:for="{{productSourceList}}" wx:key="index" bindtap="goVipPage" data-sign="{{item.source_sign}}">
        <image class="image" src="{{item.image}}"></image>
        <text class="title">{{item.source_name}}</text>
        <text class="valid">{{item.valid}}</text>
      </view>
    </scroll-view>
  </view>
  <!-- 当前设备区 -->
  <view class="device">
    <image class="tvimage" src="../../images/my/tv.png"></image>
    <view class="device-info">
      <view class="tvname">{{curTV.name}}</view>
      <view class="tvsource" wx:if="{{!!curTV.source}}">{{curTV.source}}</view>
    </view>
    <view class="device-switch" data-type="home" bindtap="handleJumpPage">{{curTV.btn}}</view>
  </view>
  <!-- 当前绑定电视账户与微信登录账户不一致时 -->
  <view class="unmatch" wx:if="{{curTV.bAcctMatch == false}}">
    <view class="tips">{{curTV.unmatch.tip}}</view>
    <view class="acct-info" wx:for="{{curTV.unmatch.acct}}" wx:key="index">
      <image class="image" src="{{item.avatar}}"></image>
      <view class="name">{{item.name}}</view>
      <view class="location">{{item.location}}</view>
    </view>
    <image class="sync-icon" src="../../images/my/sync.png"></image>
    <view class="domatch" bindtap="syncTVAcct">同步会员账号</view>
  </view>

  <!-- 投屏历史 标题行 -->
  <view class='history mylabel' data-type="history" bindtap="handleJumpPage">
    <image class='my_icon' src="../../images/my/history.png"></image>
    <text class="title">投屏历史</text>
    <text class="more">更多</text>
    <image class="arrow" src="../../images/my/arrow.png"></image>
  </view>
  <!-- 投屏历史 预览区 -->
  <view wx:if="{{!!historyList}}" class="scroll_box section">
    <scroll-view class="scroll-view_x" scroll-x style="width: auto;overflow:hidden;">
      <navigator wx:for="{{historyList}}" wx:key="index" wx:for-item="item" class="item_list" url="../movieDetail/movieDetail?id={{item.album_id}}">
        <view>
          <image src="{{item.poster_h}}" class="item_book_img" mode="aspectFill"></image>
          <view class="item_book_text inaline">{{item.title}}</view>
        </view>
      </navigator>
    </scroll-view>
  </view>
  
  <!-- 我的喜欢 标题行 -->
  <view class='favorite mylabel' data-type="favorite" bindtap="handleJumpPage">
    <image class='my_icon' src="../../images/my/favorite.png"></image>
    <text class="title">我的喜欢</text>
    <text class="more">更多</text>
    <image class="arrow" src="../../images/my/arrow.png"></image>
  </view>

  <!-- 消费记录 标题行 -->
  <view class='record mylabel' data-type="record" bindtap="handleJumpPage">
    <image class='my_icon' src="../../images/my/record.png"></image>
    <text class="title">消费记录</text>
    <text class="more">更多</text>
    <image class="arrow" src="../../images/my/arrow.png"></image>
  </view>

  <!-- 实体卡激活 标题行 -->
  <view class='card mylabel' data-type="card" bindtap="handleJumpPage">
    <image class='my_icon' src="../../images/my/card.png"></image>
    <text class="title">实体卡激活</text>
    <text class="more">更多</text>
    <image class="arrow" src="../../images/my/arrow.png"></image>
  </view>

  <view class="paddingZone"></view>

