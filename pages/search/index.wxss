/* 返回框样式 */
.return-box {
  /* position:absolute; */
  display:flex;
  align-items: center;
  /* justify-content:center; */
  width:464rpx;
  height:66rpx;
  margin-left:10rpx;
  /* background-image:linear-gradient(-225deg, #F0F300 0%,orange 100%); */
  border-radius:50rpx;
  margin-top:80rpx;
}
.return-icon {
  margin-left: 20rpx;
  width: 60rpx;
  height: 60rpx;
}
.return-text {
  margin-left: 20rpx;
  font-size: 28rpx;
  color: gray;
  letter-spacing: 0;
