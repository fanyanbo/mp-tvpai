.grayBox{
  width: 100%;
  height: 100%;
  background: #ccc;
  position:fixed;
  top:0;
  bottom:0;
  z-index: 99999;
}

/*评论输入框  */
.inputWords{
  height: 312rpx;
  width: 750rpx;
  background: rgba(255,255,255,1);
  border-radius:8px 8px 0px 0px;
  position: fixed;
  z-index: 9999999;
  bottom:300px;
}
.inputWords textarea{
  width: 710rpx;
  margin:20rpx auto;
  height: 172rpx;
  line-height: 45rpx;
  font-size: 32rpx;
  background:rgba(248,248,248,1);
  border-radius:4px;
  border:1px solid rgba(236,236,236,1);
  color:#333;
}

.comment-wrapper {
  width: 710rpx;
  height: 100rpx;
  margin: 0 auto;
  display: flex;
  align-items: center;
  box-sizing: border-box;
}

.comment-wrapper .comment-title {
  width:28px;
  height:50px;
  font-size:14px;
  font-family:PingFangSC-Regular,PingFangSC;
  font-weight:400;
  color:rgba(51,51,51,1);
  line-height:50px;
}

.comment-wrapper .stars-wrapper {
  display: inline-block;
  width: 300rpx;
  height: 50rpx;
  background: #fff;
}

.stars-wrapper view {
  float: left;
  width: 50rpx;
  height: 50rpx;
  margin-left: 10rpx;
}

.stars-wrapper image {
  width: 48rpx;
  height: 48rpx;
}

.comment-wrapper .input-number {
  margin-left: 120rpx;
  width:80rpx;
  height:25rpx;
  font-size:12px;
  font-family:PingFangSC-Regular,PingFangSC;
  font-weight:400;
  color:rgba(204,204,204,1);
  line-height:17px;
}

.comment-wrapper .confirm-button {
  margin-left: 20rpx;
  width:56px;
  height:30px;
  text-align: center;
  background:rgba(255,215,28,1);
  border-radius:18px;
  font-size:14px;
  font-family:PingFangSC-Regular,PingFangSC;
  font-weight:400;
  color:rgba(51,51,51,1);
  line-height:30px;
}