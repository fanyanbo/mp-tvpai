.grayBox{
  width: 100%;
  height: 100%;
  /* background: #ccc; */
  background:rgba(0,0,0,0.5);
  position:fixed;
  top:0;
  bottom:0;
  z-index: 99999;
}

/*评论输入框  */
.inputWords{
  height: 312rpx;
  width: 750rpx;
  background: rgba(255,255,255,1);
  border-radius:8px 8px 0px 0px;
  position: fixed;
  z-index: 9999999;
  bottom: 300px;
}
.inputWords textarea{
  box-sizing: border-box;
  width: 710rpx;
  margin:20rpx auto;
  height: 172rpx;
  line-height: 45rpx;
  font-size: 32rpx;
  background:rgba(248,248,248,1);
  border-radius:4px;
  border:1px solid rgba(236,236,236,1);
  color:#333;
  padding: 20rpx;
}

.comment-wrapper {
  width: 710rpx;
  height: 60rpx;
  margin: 0 auto;
  display: flex;
  align-items: center;
  box-sizing: border-box;
}

.comment-wrapper .comment-title {
  width:56rpx;
  height:40rpx;
  font-size:28rpx;
  font-family:PingFangSC-Regular,PingFangSC;
  font-weight:400;
  color:rgba(51,51,51,1);
  line-height:40rpx;
}

.comment-wrapper .stars-wrapper {
  /* display: inline-block; */
  width: 300rpx;
  height: 48rpx;
  background: #fff;
  margin-left: 10rpx;
}

.stars-wrapper view {
  /* float: left; */
  display: inline-block;
  width: 48rpx;
  height: 48rpx;
  margin-left: 5rpx;
}

.stars-wrapper image {
  width: 48rpx;
  height: 48rpx;
}

.comment-wrapper .input-number {
  margin-left: 130rpx;
  width:80rpx;
  height:34rpx;
  font-size:24rpx;
  font-family:PingFangSC-Regular,PingFangSC;
  color:rgba(204,204,204,1);
  line-height:34rpx;
}

.comment-wrapper .confirm-button {
  margin-left: 20rpx;
  width:112rpx;
  height:60rpx;
  text-align: center;
  background:rgba(255,215,28,1);
  border-radius:18px;
  font-size:28rpx;
  font-family:PingFangSC-Regular,PingFangSC;
  color:rgba(51,51,51,1);
  line-height:60rpx;
}