/* components/toastPrompt/toastPrompt.wxss */
.toast_prompt {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 9000;
}

.toast_prompt__mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #000;
  opacity: 0.5;
}

.toast_prompt__content {
  position: absolute;
  top: 50%;
  left: 10%;
  width: 80%;
  height: 20%;
  transform: translateY(-50%);
  font-size: 15px;
  color: #000;
  font-family: 'PingFangSC-Regular', sans-serif;
  text-align: center;
  background: #FFF;
  border-radius: 4rpx;
  z-index: 9001;
}
.toast_prompt__content__tips {
  position: absolute;
  top: 25rpx;
  padding: 0 25rpx;
  width: 92%;
}
.toast_prompt__content__btn {
  position: absolute;
  bottom: 0;
  height: 60rpx;
  width: 100%;
  line-height: 60rpx;
  font-size: 18px;
  color: #FDBE1A;
  border-top: 1px solid #E5E5E5;
}
