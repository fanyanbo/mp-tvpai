.tab-bar {
  position: fixed;
  top: 68px;
  left: 0;
  right: 0;
  height: 48px;
  background: #fff;
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
  z-index: 9999;
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  font-size: 28rpx;
}

.tab-bar-item .tab-bar-bottom {
  margin-top: 8px;
  width: 40px;
  border-bottom-style: solid;
  border-width: 2px;
  border-color: #FDBE1A;
}
