.tab-bar {
  position: fixed;
  /* top: 68px; */
  left: 0;
  right: 0;
  height: 48px;
  background: #fff;
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
  z-index: 9999;
  box-sizing: border-box;
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  font-size: 34rpx;
  font-family: PingFangSC-Semibold, sans-serif;
  font-weight: bold;
}

.tab-bar-item .tab-selected {
  color: #333333;
}

.tab-bar-item .tab-noselected {
  color: #999999;
}

.tab-bar-item .tab-bar-bottom {
  width: 14px;
  border-radius: 50px;
  border-bottom-style: solid;
  border-width: 3px;
  border-color: #FFD71C;
}

.tab-bar-item .bottom-rapper {
  height: 3px;
  margin-top: 8px;
  width: 14px;
  box-sizing: border-box;
}

